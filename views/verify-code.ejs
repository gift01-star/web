<!doctype html>
<html>
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Verify â€“ PaKoNa Meet</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Inter&display=swap" rel="stylesheet">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body, html { height: 100%; font-family: 'Inter', sans-serif; }
    .landing-container {
      background-image: linear-gradient(120deg, rgba(236,72,153,0.7) 0%, rgba(139,92,246,0.7) 100%), url('https://images.unsplash.com/photo-1517841905240-472988babdf9?auto=format&fit=crop&w=1470&q=80');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      position: relative;
    }
    .overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(120deg, rgba(236,72,153,0.45) 0%, rgba(139,92,246,0.45) 100%);
      z-index: 0;
      opacity: 0.7;
      animation: fadeIn 1.5s;
    }
    @keyframes fadeIn { from { opacity: 0; } to { opacity: 0.85; } }
    .form-card {
      position: relative;
      z-index: 1;
      background: rgba(255,255,255,0.92);
      border-radius: 18px;
      box-shadow: 0 2px 24px 0 rgba(139,92,246,0.08);
      padding: 48px 32px 32px;
      max-width: 400px;
      width: 100%;
      margin: 32px 16px;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .form-card h1 {
      font-size: 2.2rem;
      font-family: 'Playfair Display', serif;
      color: #ec4899;
      margin-bottom: 0.5rem;
    }
    .form-card p {
      color: #6d28d9;
      margin-bottom: 1.5rem;
      font-size: 1.1rem;
    }
    .form-card .code-inputs {
      display: flex;
      justify-content: center;
      gap: 0.5rem;
      margin-bottom: 1.2rem;
    }
    .form-card input.code-box {
      width: 2.5rem;
      height: 2.5rem;
      font-size: 1.5rem;
      text-align: center;
      border-radius: 0.7rem;
      border: 1.5px solid #d1d5db;
      background: #fff;
      margin: 0 2px;
      outline: none;
      transition: border 0.2s, box-shadow 0.2s;
    }
    .form-card input.code-box:focus {
      border: 1.5px solid #ec4899;
      box-shadow: 0 0 0 2px #fbcfe8;
    }
    .form-card button {
      background: linear-gradient(90deg, #ec4899 0%, #8b5cf6 100%);
      color: #fff;
      font-weight: 600;
      border: none;
      border-radius: 1rem;
      padding: 0.9rem 0;
      font-size: 1.1rem;
      cursor: pointer;
      margin-top: 0.5rem;
      transition: background 0.2s;
    }
    .form-card button:hover {
      background: linear-gradient(90deg, #db2777 0%, #7c3aed 100%);
    }
    .form-card .error {
      background: #fee2e2;
      color: #b91c1c;
      border-radius: 0.5rem;
      padding: 0.5rem 1rem;
      margin-bottom: 1rem;
      font-size: 0.95rem;
      text-align: center;
    }
    .form-card .flex { display: flex; gap: 0.5rem; }
    .form-card .flex-1 { flex: 1; }
    @media (max-width: 600px) {
      .form-card { padding: 24px 8px 16px; }
      .form-card h1 { font-size: 1.5rem; }
      .form-card .code-inputs { gap: 0.2rem; }
      .form-card input.code-box { width: 2rem; height: 2rem; font-size: 1.1rem; }
    }
  </style>
</head>
<body>
  <div class="landing-container">
    <div class="overlay"></div>
    <div class="form-card">
      <h1>Code Verification</h1>
      <p>Enter your verification code sent to your email</p>
      <% if (error) { %>
        <div class="error"><%= error %></div>
      <% } %>
      <form method="POST" action="/verify-code">
        <label for="code">Verification Code</label>
        <div class="code-inputs">
          <input class="code-box" type="text" inputmode="numeric" maxlength="1" pattern="[0-9]*" required />
          <input class="code-box" type="text" inputmode="numeric" maxlength="1" pattern="[0-9]*" required />
          <input class="code-box" type="text" inputmode="numeric" maxlength="1" pattern="[0-9]*" required />
          <input class="code-box" type="text" inputmode="numeric" maxlength="1" pattern="[0-9]*" required />
          <input class="code-box" type="text" inputmode="numeric" maxlength="1" pattern="[0-9]*" required />
          <input class="code-box" type="text" inputmode="numeric" maxlength="1" pattern="[0-9]*" required />
          <input type="hidden" name="code" id="code" />
        </div>
        <div class="flex">
          <button type="submit" class="flex-1">Verify</button>
          <form method="POST" action="/resend-code" class="m-0">
            <button type="submit" class="flex-1" style="background:#e5e7eb;color:#374151;">Resend</button>
          </form>
        </div>
      </form>
    </div>
  </div>
  <script>
    // Autofill code boxes and set hidden input
    const boxes = document.querySelectorAll('.code-box');
    const hidden = document.getElementById('code');
    boxes.forEach((box, idx) => {
      box.addEventListener('input', (e) => {
        if (box.value.length === 1 && idx < boxes.length - 1) boxes[idx+1].focus();
        updateHidden();
      });
      box.addEventListener('keydown', (e) => {
        if (e.key === 'Backspace' && !box.value && idx > 0) boxes[idx-1].focus();
      });
    });
    function updateHidden() {
      hidden.value = Array.from(boxes).map(b => b.value).join('');
    }
  </script>
</body>
</html>
