<!doctype html>
<html>
<head>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Interests & Photo</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Inter&display=swap" rel="stylesheet">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body, html { height: 100%; font-family: 'Inter', sans-serif; }
    .landing-container {
      background-image: linear-gradient(120deg, rgba(236,72,153,0.7) 0%, rgba(139,92,246,0.7) 100%), url('https://images.unsplash.com/photo-1517841905240-472988babdf9?auto=format&fit=crop&w=1470&q=80');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      position: relative;
    }
    .overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(120deg, rgba(236,72,153,0.45) 0%, rgba(139,92,246,0.45) 100%);
      z-index: 0;
      opacity: 0.7;
      animation: fadeIn 1.5s;
    }
    @keyframes fadeIn { from { opacity: 0; } to { opacity: 0.85; } }
    .form-card {
      position: relative;
      z-index: 1;
      background: rgba(255,255,255,0.92);
      border-radius: 18px;
      box-shadow: 0 2px 24px 0 rgba(139,92,246,0.08);
      padding: 48px 32px 32px;
      max-width: 500px;
      width: 100%;
      margin: 32px 16px;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .form-card h1 {
      font-size: 2.2rem;
      font-family: 'Playfair Display', serif;
      color: #ec4899;
      margin-bottom: 0.5rem;
    }
    .form-card p {
      color: #6d28d9;
      margin-bottom: 1.5rem;
      font-size: 1.1rem;
    }
    .form-card form {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 1.2rem;
      text-align: left;
    }
    .form-card label {
      font-size: 1rem;
      color: #6b7280;
      margin-bottom: 0.3rem;
      display: block;
    }
    .form-card input[type="text"],
    .form-card input[type="file"],
    .form-card select {
      width: 100%;
      padding: 0.75rem 1rem;
      border-radius: 1rem;
      border: 1px solid #d1d5db;
      font-size: 1rem;
      outline: none;
      margin-bottom: 0.2rem;
      transition: border 0.2s, box-shadow 0.2s;
    }
    .form-card input:focus, .form-card select:focus {
      border: 1.5px solid #ec4899;
      box-shadow: 0 0 0 2px #fbcfe8;
    }
    .form-card .interests-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: 0.5rem;
      margin-bottom: 1rem;
    }
    .form-card .interest-label {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      background: #f3f4f6;
      padding: 0.5rem 0.7rem;
      border-radius: 0.7rem;
      cursor: pointer;
      font-size: 1rem;
      color: #374151;
    }
    .form-card .interest-label input[type="checkbox"] {
      accent-color: #ec4899;
    }
    .form-card .preview img {
      margin-top: 0.5rem;
      border-radius: 1rem;
      box-shadow: 0 2px 8px 0 rgba(139,92,246,0.10);
      width: 120px;
    }
    .form-card button, .form-card a.button-link {
      background: linear-gradient(90deg, #ec4899 0%, #8b5cf6 100%);
      color: #fff;
      font-weight: 600;
      border: none;
      border-radius: 1rem;
      padding: 0.9rem 0;
      font-size: 1.1rem;
      cursor: pointer;
      margin-top: 0.5rem;
      transition: background 0.2s;
      text-align: center;
      text-decoration: none;
      display: inline-block;
    }
    .form-card button:hover, .form-card a.button-link:hover {
      background: linear-gradient(90deg, #db2777 0%, #7c3aed 100%);
    }
    .form-card .error {
      background: #fee2e2;
      color: #b91c1c;
      border-radius: 0.5rem;
      padding: 0.5rem 1rem;
      margin-bottom: 1rem;
      font-size: 0.95rem;
      text-align: center;
    }
    .form-card .flex-row {
      display: flex;
      gap: 1rem;
      margin-top: 1rem;
    }
    @media (max-width: 600px) {
      .form-card { padding: 24px 8px 16px; }
      .form-card h1 { font-size: 1.5rem; }
      .form-card .interests-grid { grid-template-columns: 1fr 1fr; }
    }
  </style>
</head>
<body>
  <div class="landing-container">
    <div class="overlay"></div>
    <div class="form-card">
      <h1>ðŸ’– PaKoNa Meet</h1>
      <p>Choose at least 5 interests and upload your photo</p>
      <% if (error) { %><div class="error"><%= error %></div><% } %>
      <form action="/register-step4" method="POST" enctype="multipart/form-data" id="step4Form">
        <div>
          <input type="text" id="interestSearch" placeholder="Search interests..." />
        </div>
        <div id="interestsGrid" class="interests-grid">
          <% interests.forEach(interest => { %>
            <label class="interest-label">
              <input type="checkbox" name="hobbies" value="<%= interest %>" />
              <span><%= interest %></span>
            </label>
          <% }) %>
        </div>
        <div>
          <label>Upload profile photo (optional)</label>
          <input type="file" name="image" accept="image/*" id="imageInput" />
          <div id="preview" class="preview"></div>
        </div>
        <div class="flex-row">
          <button type="submit">Next</button>
          <a href="/register-step3" class="button-link" style="background:#e5e7eb;color:#374151;">Back</a>
        </div>
      </form>
    </div>
  </div>
  <script>
    // client-side enforce minimum 5 interests
    const form = document.getElementById('step4Form');
    form.addEventListener('submit', (e) => {
      const checked = Array.from(document.querySelectorAll('input[name="hobbies"]:checked')).map(i => i.value);
      if (checked.length < 5) {
        e.preventDefault();
        alert('Please select at least 5 interests');
      }
    });
    // preview image
    const imgInput = document.getElementById('imageInput');
    imgInput.addEventListener('change', () => {
      const preview = document.getElementById('preview');
      preview.innerHTML = '';
      const file = imgInput.files[0];
      if (!file) return;
      const img = document.createElement('img');
      img.src = URL.createObjectURL(file);
      img.width = 120;
      img.onload = () => URL.revokeObjectURL(img.src);
      preview.appendChild(img);
    });
    // Interest search/filter
    const interestSearch = document.getElementById('interestSearch');
    interestSearch.addEventListener('input', function() {
      const val = this.value.toLowerCase();
      document.querySelectorAll('#interestsGrid label').forEach(label => {
        const text = label.textContent.toLowerCase();
        label.style.display = text.includes(val) ? '' : 'none';
      });
    });
  </script>
</body>
</html>