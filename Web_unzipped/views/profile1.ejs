<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= profileuser.name %>'s Profile - SoulSwipe</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <style>
    .card-hover {
      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }
    .card-hover:hover {
      transform: translateY(-5px) scale(1.02);
      box-shadow: 0 8px 20px rgba(255, 105, 180, 0.4);
    }
  </style>
</head>
<body class="bg-gradient-to-b from-purple-900 via-gray-900 to-black text-white min-h-screen">

  <!-- Navbar -->
  <nav class="bg-purple-600 p-4 flex justify-between items-center shadow-lg">
    <div class="text-2xl font-extrabold tracking-wider">SoulSwipe</div>
    <a href="/dashboard" class="text-yellow-300 hover:text-white font-semibold">Dashboard</a>
  </nav>

  <div class="flex items-center justify-center min-h-[80vh]">
    <div class="bg-gray-800 rounded-2xl shadow-lg card-hover p-10 max-w-md w-full text-center">
      <div class="flex flex-col items-center mb-6">
        <div class="relative w-32 h-32 mb-3">
          <img src="<%= (profileuser.image && profileuser.image !== '') ? profileuser.image : ((Array.isArray(profileuser.profileImage) && profileuser.profileImage.length > 0) ? profileuser.profileImage[0] : '/uploads/default.jpg') %>" alt="<%= profileuser.name %>" class="w-32 h-32 rounded-full object-cover border-4 border-pink-400" />
        </div>
        <h2 class="text-2xl font-bold text-pink-300 mb-1 flex items-center justify-center gap-2">
          <i class="fas fa-user-circle"></i> <%= profileuser.name || 'No name set' %>
        </h2>
        <p class="text-gray-300 italic mb-2">
          <%= profileuser.bio && profileuser.bio.trim() !== '' ? profileuser.bio : 'No bio added yet.' %>
        </p>
      </div>
      <div class="text-left text-gray-200 space-y-2 mb-6">
        <ul class="list-none space-y-2">
          <li class="flex items-center"><i class="fas fa-venus-mars text-pink-400 mr-2"></i> <span class="font-semibold">Gender:</span> <span class="ml-1"><%= profileuser.gender || 'Not specified' %></span></li>
          <li class="flex items-center"><i class="fas fa-birthday-cake text-pink-400 mr-2"></i> <span class="font-semibold">Age:</span> <span class="ml-1"><%= profileuser.age ? profileuser.age : 'Not specified' %></span></li>
          <li class="flex items-center"><i class="fas fa-heart text-pink-400 mr-2"></i> <span class="font-semibold">Interests:</span> <span class="ml-1"><%= Array.isArray(profileuser.interests) && profileuser.interests.length > 0 ? profileuser.interests.join(', ') : 'Not specified' %></span></li>
          <li class="flex items-center"><i class="fas fa-star text-pink-400 mr-2"></i> <span class="font-semibold">Hobbies:</span> <span class="ml-1"><%= Array.isArray(profileuser.hobbies) && profileuser.hobbies.length > 0 ? profileuser.hobbies.join(', ') : 'Not specified' %></span></li>
          <li class="flex items-center"><i class="fas fa-praying-hands text-pink-400 mr-2"></i> <span class="font-semibold">Religion:</span> <span class="ml-1"><%= profileuser.religion || 'Not specified' %></span></li>
          <li class="flex items-center"><i class="fas fa-venus-mars text-pink-400 mr-2"></i> <span class="font-semibold">Preferred Gender:</span> <span class="ml-1"><%= profileuser.preferredGender || 'Not specified' %></span></li>
          <li class="flex items-center"><i class="fas fa-map-marker-alt text-pink-400 mr-2"></i> <span class="font-semibold">Location:</span> <span class="ml-1"><%= profileuser.location || 'Not specified' %></span></li>
          <li class="flex items-center"><i class="fas fa-phone text-pink-400 mr-2"></i> <span class="font-semibold">Phone:</span> <span class="ml-1"><%= profileuser.phone || 'Not specified' %></span></li>
          <li class="flex items-center"><i class="fas fa-envelope text-pink-400 mr-2"></i> <span class="font-semibold">Email:</span> <span class="ml-1"><%= profileuser.email || 'Not specified' %></span></li>
          <li class="flex items-center"><i class="fas fa-check-circle text-pink-400 mr-2"></i> <span class="font-semibold">Verified:</span> <span class="ml-1"><%= profileuser.isVerified ? 'Yes' : 'No' %></span></li>
          <li class="flex items-center"><i class="fas fa-crown text-pink-400 mr-2"></i> <span class="font-semibold">Premium:</span> <span class="ml-1"><%= profileuser.isPremium ? 'Yes' : 'No' %></span></li>
        </ul>
      </div>
      
      <% if (!profileuser.name && !profileuser.bio && (!Array.isArray(profileuser.interests) || profileuser.interests.length === 0) && !profileuser.gender && !profileuser.age && !profileuser.location) { %>
        <div class="bg-yellow-100 text-yellow-800 rounded-lg px-4 py-3 mb-4 text-center">
          Your profile is incomplete. <a href="/profile/edit" class="text-pink-500 underline font-semibold">Add your details</a> to get the best experience!
        </div>
      <% } %>
      <a href="/profile/edit" class="mt-6 inline-block bg-pink-500 hover:bg-pink-600 text-white px-6 py-2 rounded-full font-semibold shadow-lg transition">Edit Profile</a>
      <% if (typeof session !== 'undefined' && session && session.userId && profileuser._id && session.userId.toString() === profileuser._id.toString()) { %>
        <form action="/profile/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete your profile? This action cannot be undone.');" style="margin-bottom:2rem;">
          <button type="submit" style="background:linear-gradient(90deg,#ec4899 0%,#8b5cf6 100%);color:#fff;font-weight:600;border:none;border-radius:1rem;padding:0.9rem 2rem;font-size:1.1rem;cursor:pointer;">Delete Profile</button>
        </form>
      <% } %>
    </div>
  </div>

  <div class="mt-10 text-center text-sm text-gray-400">
    <i class="fas fa-heart text-pink-400"></i> Â© <script>document.write(new Date().getFullYear())</script> SoulSwipe. All rights reserved.
  </div>

</body>
</html>